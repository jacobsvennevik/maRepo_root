const _react = require("react");
function useKeyboardNavigation({ onNext, onBack, onSkip, canGoNext, canGoBack, canSkip = false, enabled = true }) {
    const handleKeyDown = (0, _react.useCallback)((event)=>{
        if (!enabled) return;
        // Prevent navigation when user is typing in input fields
        const target = event.target;
        if (target.tagName === 'INPUT' || target.tagName === 'TEXTAREA' || target.contentEditable === 'true') {
            return;
        }
        switch(event.key){
            case 'ArrowRight':
            case 'Enter':
                event.preventDefault();
                if (canGoNext) {
                    onNext();
                }
                break;
            case 'ArrowLeft':
                event.preventDefault();
                if (canGoBack) {
                    onBack();
                }
                break;
            case 'Escape':
                event.preventDefault();
                if (canSkip && onSkip) {
                    onSkip();
                }
                break;
        }
    }, [
        enabled,
        onNext,
        onBack,
        onSkip,
        canGoNext,
        canGoBack,
        canSkip
    ]);
    (0, _react.useEffect)(()=>{
        document.addEventListener('keydown', handleKeyDown);
        return ()=>{
            document.removeEventListener('keydown', handleKeyDown);
        };
    }, [
        handleKeyDown
    ]);
    return {
        // Expose methods for manual triggering
        triggerNext: ()=>canGoNext && onNext(),
        triggerBack: ()=>canGoBack && onBack(),
        triggerSkip: ()=>canSkip && onSkip && onSkip()
    };
}

