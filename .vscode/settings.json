{
  // 1) Point to the correct Python interpreter
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",

  // 2) Enable pytest, disable others
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestEnabled": true,

  // 3) Arg(s) for pytest: This is typically your test directory or a root
  "python.testing.pytestArgs": [
    "."
  ],

  // 4) If you keep environment variables in a .env file
  "python.envFile": "${workspaceFolder}/.env",
  // 5) If your tests reside in a subfolder, also set the "cwd":
  // "python.testing.cwd": "${workspaceFolder}/maProject/apps"
}
